{
  "name": "pegabot",
  "version": "2.0.2",
  "main": "build/src/bot.js",
  "author": "The Pegabot authors",
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "test": "jest . --verbose",
    "dev": "nodemon .",
    "build": "rm -rf build; tsc",
    "start": "node .",
    "build-start": "rm -rf build; tsc; node .",
    "createQuiz": "node tools/createQuiz.js",
    "createVouchers": "node tools/createVouchers.js",
    "pruneVouchers": "node tools/pruneVouchers.js",
    "removeVouchers": "node tools/removeVouchers.js",
    "resetQuiz": "node tools/resetQuiz.js",
    "cleanupVouchers": "node tools/cleanupVouchers.js"
  },
  "dependencies": {
    "@discordjs/opus": "^0.5.0",
    "@sindresorhus/slugify": "^1.1.0",
    "basic-authorization-header": "^0.2.7",
    "bent": "^7.3.12",
    "canvas": "^2.7.0",
    "dank-twitch-irc": "^4.3.0",
    "date-fns": "^2.19.0",
    "discord-xp": "^1.1.13",
    "discord.js": "^12.5.3",
    "dotenv": "^8.2.0",
    "emoji-strip": "^1.0.1",
    "erlpack": "^0.1.3",
    "es6-promise": "~3.0.2",
    "express": "^4.17.1",
    "git-diff": "^2.0.6",
    "mongoose": "^5.12.3",
    "node-fetch": "^2.6.1",
    "object-assign": "~4.1.0",
    "pretty-ms": "^7.0.1",
    "querystring": "^0.2.1",
    "restler": "~3.3.0",
    "rss-parser": "^3.12.0",
    "simple-youtube-api": "^5.2.1",
    "twit": "^2.2.11"
  },
  "devDependencies": {
    "@types/bent": "^7.3.2",
    "@types/emoji-strip": "^1.0.0",
    "@types/express": "^4.17.11",
    "@types/git-diff": "^2.0.1",
    "@types/jest": "^26.0.22",
    "@types/node-fetch": "^2.5.9",
    "@types/twit": "^2.2.28",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/"
    ],
    "ignore": [
      "dist/*"
    ],
    "ext": "ts",
    "exec": "yarn build-start"
  }
}

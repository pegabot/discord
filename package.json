{
  "name": "pegabot",
  "description": "@pegabot living on @pegasusspiele's discord server",
  "version": "x.y.z",
  "main": "build/bot.js",
  "author": "The Pegabot authors",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/pegabot/discord.git"
  },
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "test": "jest . --verbose",
    "dev": "nodemon .",
    "heroku-prebuild": "sh ./injectVersion.sh",
    "build": "rm -rf build; tsc",
    "start": "node .",
    "build-start": "rm -rf build; tsc; node .",
    "generateEnvTypes": "npx gen-env-types .env -o src/types/env.d.ts -e ."
  },
  "dependencies": {
    "@discordjs/opus": "^0.5.0",
    "@sindresorhus/slugify": "^1.1.0",
    "basic-authorization-header": "^0.2.7",
    "bent": "^7.3.12",
    "canvas": "^2.7.0",
    "dank-twitch-irc": "^4.3.0",
    "date-fns": "^2.21.1",
    "discord-xp": "^1.1.14",
    "discord.js": "^12.5.3",
    "dotenv": "^8.5.0",
    "emoji-strip": "^1.0.1",
    "erlpack": "^0.1.3",
    "es6-promise": "~4.2.8",
    "express": "^4.17.1",
    "git-diff": "^2.0.6",
    "mongoose": "^5.12.7",
    "node-fetch": "^2.6.1",
    "object-assign": "~4.1.0",
    "pretty-ms": "^7.0.1",
    "querystring": "^0.2.1",
    "restler": "~3.4.0",
    "rss-parser": "^3.12.0",
    "simple-youtube-api": "^5.2.1",
    "twit": "^2.2.11"
  },
  "devDependencies": {
    "@types/bent": "^7.3.2",
    "@types/emoji-strip": "^1.0.0",
    "@types/express": "^4.17.11",
    "@types/git-diff": "^2.0.1",
    "@types/jest": "^26.0.23",
    "@types/node-fetch": "^2.5.10",
    "@types/twit": "^2.2.28",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/"
    ],
    "ignore": [
      "dist/*"
    ],
    "ext": "ts",
    "exec": "yarn build-start"
  }
}
